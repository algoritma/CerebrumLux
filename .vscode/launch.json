    "version": "0.2.0",
    "configurations": [ 
        {
            "name": "Debug CerebrumLux",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/CerebrumLuxGUI.exe",
            "args": [],
            "stopAtEntry": true, // Uygulama main() fonksiyonunun başında dursun
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": true, // <--- KRİTİK DEĞİŞİKLİK: Harici konsol kullan
            "MIMode": "gdb",
            "miDebuggerPath": "C:/Qt/tools/mingw1310_64/bin/gdb.exe",
            // Ortam değişkenlerini doğrudan launch.json'a ekleyerek test edebiliriz
            "setupCommands": [
                {
                    "text": "set environment QT_DEBUG_PLUGINS=1",
                    "description": "Enable Qt plugin debugging"
                },
                {
                    "text": "enable pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}